<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding"
    android:id="@+id/content_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edInitDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/initial_day"
                android:enabled="false"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btnGetDay"
                android:layout_width="24dp"
                android:layout_height="38dp"
                android:padding="@dimen/default_padding"
                android:background="@drawable/ic_calendar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edInitTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/initial_hour"
                android:enabled="false"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btnGetTime"
                android:layout_width="24dp"
                android:layout_height="42dp"
                android:padding="@dimen/default_padding"
                android:background="@drawable/ic_clock" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edRestTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="eta for the bus"
                android:enabled="false"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btnGetETA"
                android:layout_width="24dp"
                android:layout_height="42dp"
                android:padding="@dimen/default_padding"
                android:background="@drawable/ic_clock" />

        </LinearLayout>


        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/generate"
            android:textColor="@color/colorIcons"
            android:layout_marginTop="20dp"
            android:background="@drawable/totvs_button"/>
    </LinearLayout>

</FrameLayout>